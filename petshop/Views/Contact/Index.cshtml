@model ﻿petshop.Models.Contact
<section class="container mx-auto px-4 py-12">
    <h2 class="text-3xl font-bold text-center mb-8">Liên hệ với chúng tôi</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
            <h3 class="text-xl font-semibold mb-4">Thông tin liên hệ</h3>
            <p class="text-gray-600 mb-2"><strong>Email:</strong> support@petstore.vn</p>
            <p class="text-gray-600 mb-2"><strong>Hotline:</strong> 0123 456 789</p>
            <p class="text-gray-600 mb-2"><strong>Địa chỉ:</strong> 123 Đường Pet, TP.HCM</p>
            <p class="text-gray-600">Chúng tôi luôn sẵn sàng hỗ trợ bạn với mọi thắc mắc về sản phẩm và dịch vụ!</p>
        </div>
        <div>
            <h3 class="text-xl font-semibold mb-4">Gửi tin nhắn</h3>
            <form asp-controller="Contact" asp-action="Send" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-4">
                    <label for="name" class="block text-gray-700">Họ tên</label>
                    <input type="text" id="name" name="name" class="w-full border rounded px-4 py-2" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="email" name="email" class="w-full border rounded px-4 py-2" required>
                </div>
                <div class="mb-4">
                    <label for="message" class="block text-gray-700">Tin nhắn</label>
                    <textarea id="message" name="message" class="w-full border rounded px-4 py-2" rows="5" required></textarea>
                </div>
                <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700">Gửi</button>
                @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="message-success mt-4 text-center">@ViewBag.SuccessMessage</div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="message-error mt-4 text-center">@ViewBag.ErrorMessage</div>
                    }
            </form>
        </div>
    </div>
</section> 
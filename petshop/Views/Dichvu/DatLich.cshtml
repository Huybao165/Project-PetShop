@model petshop.Models.DatLichViewModel

@{
    ViewData["Title"] = "Đặt lịch dịch vụ";
}

<div class="container mx-auto p-6">
    <div class="bg-white shadow-md rounded p-6">
        <h2 class="text-2xl font-bold mb-4 text-blue-600">Đặt lịch: @Model.TenDichVu</h2>

        <!-- ✅ Hiển thị thông báo từ TempData -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                @TempData["Success"]
            </div>
        }

        <form asp-action="DatLich" method="post" class="space-y-4">
            <input type="hidden" asp-for="DichVuId" />

            <div>
                <label asp-for="TenKhach" class="block text-gray-700 font-semibold">Họ tên</label>
                <input asp-for="TenKhach" class="w-full p-2 border rounded" />
                <span asp-validation-for="TenKhach" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="SoDienThoai" class="block text-gray-700 font-semibold">Số điện thoại</label>
                <input asp-for="SoDienThoai" class="w-full p-2 border rounded" />
                <span asp-validation-for="SoDienThoai" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
                Gửi yêu cầu
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

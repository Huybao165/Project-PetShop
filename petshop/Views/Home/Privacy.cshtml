<section class="container mx-auto px-4 py-12">
    <h2 class="text-3xl font-bold text-center mb-8">Giỏ hàng của bạn</h2>
    <div id="cart-items" class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="cart-item flex items-center border-b py-4">
            <img src="https://images.unsplash.com/photo-1583512603806-6cc94e6671b1?ixlib=rb-4.0.3&amp;auto=format&amp;fit=crop&amp;w=300&amp;q=80" alt="Vòng cổ cho chó" class="w-20 h-20 object-cover rounded-md mr-4">
            <div class="flex-1">
                <h3 class="text-lg font-semibold">Vòng cổ cho chó</h3>
                <p class="text-gray-600">150.000 VNĐ x 1</p>
            </div>
            <div class="flex items-center space-x-2">
                <button class="decrease-qty px-2 py-1 bg-gray-200 rounded" data-id="2">-</button>
                <input type="number" value="1" min="1" class="w-12 text-center border rounded" data-id="2">
                <button class="increase-qty px-2 py-1 bg-gray-200 rounded" data-id="2">+</button>
                <button class="remove-item text-red-600" data-id="2">Xóa</button>
            </div>
        </div>
    </div>
    <div class="flex justify-between items-center bg-white rounded-lg shadow p-6">
        <h3 class="text-xl font-semibold">Tổng cộng: <span id="cart-total">0 VNĐ</span></h3>
        <a href="#" id="checkout-btn" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700">Thanh toán</a>
    </div>
</section>
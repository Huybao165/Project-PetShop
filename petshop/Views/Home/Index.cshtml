@model IEnumerable<petshop.Models.product>
<section class="banner relative">
    <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover z-0">
        <source src="~/0615.mp4" type="video/mp4">
        Trình duyệt của bạn không hỗ trợ video.
    </video>

    <div class="relative z-10 text-center text-white px-4">
        <h1 class="text-4xl font-bold mb-4">Chào mừng đến với Pet Store</h1>
        <p class="text-lg mb-6">Yêu thương thú cưng của bạn với những sản phẩm chất lượng nhất!</p>
        <a asp-controller="Danhmuc" asp-action="Index" class="bg-blue-600 text-white px-6 py-3 rounded-full hover:bg-blue-700">Mua sắm ngay</a>
    </div>

</section>


<!-- Product Section -->
<section class="container mx-auto px-4 py-12">
    <h2 class="text-3xl font-bold text-center mb-8">Sản phẩm nổi bật</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Product Card -->
        @foreach(var item in Model)
        {
            <div class="product-card bg-white rounded-lg shadow p-4">
                <a asp-controller="Home" asp-action="Detail" asp-route-Id="@item.Id"><img src="@item.image"></a>
                <h3 class="text-lg font-semibold">@item.name</h3>
                <p class="text-gray-600">@item.price.ToString("N0")</p>
                <form  asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700">Thêm vào giỏ</button>
                </form>
            </div>
        }
    </div>
</section>

<!-- Promotion Section -->
<section class="bg-blue-50 py-12">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Ưu đãi đặc biệt</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="promo-card bg-white rounded-lg shadow p-6 flex items-center">
                <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=300&q=80" alt="Khuyến mãi" class="w-32 h-32 object-cover rounded-md mr-4">
                <div>
                    <h3 class="text-xl font-semibold">Giảm 20% cho thức ăn thú cưng</h3>
                    <p class="text-gray-600">Áp dụng cho tất cả các loại thức ăn trong tháng này!</p>
                    <a href="#" class="text-blue-600 hover:underline">Xem ngay</a>
                </div>
            </div>
            <div class="promo-card bg-white rounded-lg shadow p-6 flex items-center">
                <img src="https://images.unsplash.com/photo-1583511655826-05700d52f4d9?ixlib=rb-4.0.3&auto=format&fit=crop&w=300&q=80" alt="Khuyến mãi" class="w-32 h-32 object-cover rounded-md mr-4">
                <div>
                    <h3 class="text-xl font-semibold">Miễn phí giao hàng</h3>
                    <p class="text-gray-600">Cho đơn hàng trên 1.000.000 VNĐ!</p>
                    <a href="#" class="text-blue-600 hover:underline">Xem ngay</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Customer Reviews Section -->
